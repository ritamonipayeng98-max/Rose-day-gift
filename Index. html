    <script>
        let b = ["","","","","","","","",""];
        function go(n) {
            document.querySelectorAll('.page').forEach(p => p.classList.remove('active'));
            document.getElementById('p'+n).classList.add('active');
            if(n===3) setInterval(petals, 300);
        }
        function tap(i) {
            if(b[i]==="") {
                b[i]="‚ù§Ô∏è"; document.querySelectorAll('.cell')[i].innerText="‚ù§Ô∏è";
                if(!win()) setTimeout(ai, 400);
            }
        }
        function ai() {
            let e = b.map((v,i)=>v===""?i:null).filter(v=>v!==null);
            if(e.length) { b[e[0]]="üåπ"; document.querySelectorAll('.cell')[e[0]].innerText="üåπ"; win(); }
        }
        function win() {
            const lines = [[0,1,2],[3,4,5],[6,7,8],[0,3,6],[1,4,7],[2,5,8],[0,4,8],[2,4,6]];
            for(let l of lines) {
                if(b[l[0]] && b[l[0]]===b[l[1]] && b[l[0]]===b[l[2]]) {
                    if(b[l[0]]==="‚ù§Ô∏è") document.getElementById('next').style.display="block";
                    return true;
                }
            }
            return false;
        }
        function petals() {
            const p = document.createElement('div');
            p.className = 'petal';
            p.innerHTML = 'üåπ';
            p.style.left = Math.random() * 100 + 'vw';
            document.body.appendChild(p);
            setTimeout(() => p.remove(), 5000);
        }
    </script>
